{% assign breadcrumb = collections.all | eleventyNavigationBreadcrumb: eleventyNavigation.key, navOptions %}
<ul
  class="breadcrumb">
  {%- for entry in breadcrumb %}
    <li
      class="breadcrumb__item">
      <a
        class="breadcrumb__link {% if entry.url == page.url %}breadcrumb__link--active{% endif %}"
        href="{{ entry.url }}">
        {{ entry.title }}
      </a>
    </li>
  {%- endfor %}
</ul>